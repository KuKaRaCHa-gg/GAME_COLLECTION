# Activer le moteur de réécriture
RewriteEngine on

# Si la requête est pour un fichier ou un répertoire existant, ne pas réécrire
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d

# Réécrire les URLs propres (ex: /add → index.php?a=add)
RewriteRule ^([a-zA-Z0-9_-]+)$ index.php?a=$1 [QSA,L]

# Rediriger toutes les autres requêtes vers index.php
RewriteRule ^.*$ index.php [QSA,L]
